extends layout

block content

  h1 #{book.title}
  p= book.lifespan

  if books_instance.length

    p #[strong Delete the following books instances before attempting to delete this book.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Books
      dl
        each book in books_instance
          dt
            p #{book.imprint}
          dd #{book.status}

  else
    p Do you really want to delete this Book?

    form(method='POST')
      div.form-group
        input#book.form-control(type='hidden', name='book', value=book._id )

      button.btn.btn-primary(type='submit') Delete
